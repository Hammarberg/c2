{
	"templates":[
		"6502":{
			"description" : "Plain 6502 for embedded projects",
			"super" : "c2i",
			"include" : "c2/h/c2i.h",
			"arguments" : "--address-range 0x0 0x10000 --out - + {title}.bin",
			"source":[
				"c2i.cpp":{
					"flags" : "-O2"
				}
			],
			"template":[
				"asm.cpp":{
					"target" : "{title}.cpp"
					"c2" : true
					"flags" : "-O0"
				},
				"6502.s":{
					"target" : "{title}.s"
				}
			]
		},
		"c64":{
			"description" : "Commodore 64",
			"super" : "c64",
			"include" : "c2/c64/c64.h",
			"arguments" : "--out-prg - + {title}.prg",
			"source":[
				"c2i.cpp":{
					"flags" : "-O2"
				},
				"c64.cpp":{
					"flags" : "-O2"
				}
			],
			"template":[
				"asm.cpp":{
					"target" : "{title}.cpp"
					"c2" : true
					"flags" : "-O0"
				},
				"c64.s":{
					"target" : "{title}.s"
				}
			]
		},
		"c64vice":{
			"description" : "Commodore 64 with VICE configuration",
			"super" : "c64",
			"include" : "c2/c64/c64.h",
			"arguments" : "--out-prg - + {title}.prg --vice-cmd {title}.sym",
			"execute" : "x64sc -silent -moncommands {title}.sym {title}.prg",
			"source":[
				"c2i.cpp":{
					"flags" : "-O2"
				},
				"c64.cpp":{
					"flags" : "-O2"
				}
			],
			"template":[
				"asm.cpp":{
					"target" : "{title}.cpp"
					"c2" : true
					"flags" : "-O0"
				},
				"c64.s":{
					"target" : "{title}.s"
				}
			]
		},
		"atari2600":{
			"description" : "Atari2600 with 4KB of ROM at $f000",
			"super" : "c2i",
			"include" : "c2/h/c2i.h",
			"arguments" : "--address-range 0xf000 0x10000 --out 0xf000 0x10000 {title}.rom",
			"source":[
				"c2i.cpp":{
					"flags" : "-O2"
				}
			],
			"template":[
				"asm.cpp":{
					"target" : "{title}.cpp"
					"c2" : true
					"flags" : "-O0"
				},
				"atari2600.s":{
					"target" : "{title}.s"
				}
			]
		},
		"68000":{
			"description" : "Plain 68000 with 16MB of RAM for embedded projects",
			"super" : "motorola68000",
			"include" : "c2/motorola/68000.h",
			"arguments" : "--out - + {title}.bin",
			"source":[
				"c2i.cpp":{
					"flags" : "-O2"
				},
				"68000.cpp":{
					"flags" : "-O2"
				}
			],
			"template":[
				"asm.cpp":{
					"target" : "{title}.cpp"
					"c2" : true
					"flags" : "-O0"
				},
				"68000.s":{
					"target" : "{title}.s"
				}
			]
		},
		"void":{
			"description" : "Void c2 project, no target architecture for custom assembly of binaries and hacking",
			"super" : "c2i",
			"include" : "c2/h/c2i.h",
			"arguments" : "--address-range 0x0 0xa00000 --out - + {title}.bin",
			"source":[
				"c2i.cpp":{
					"flags" : "-O2"
				}
			],
			"template":[
				"asm.cpp":{
					"target" : "{title}.cpp"
					"c2" : true
					"flags" : "-O0"
				},
				"void.s":{
					"target" : "{title}.s"
				}
			]
		}
	]
}
