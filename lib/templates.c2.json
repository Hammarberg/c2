{
	"templates":[
		"c64":{
			"description" : "Commodore 64",
			"super" : "c64",
			"include" : "c2/c64/c64.h",
			"arguments" : "--out-prg - + {title}.prg",
			"source":[
				"c2i.cpp":{
					"flags" : "-O2"
				},
				"c64.cpp":{
					"flags" : "-O2"
				}
			],
			"template":[
				"asm.cpp":{
					"target" : "{title}.cpp"
					"c2" : true
					"flags" : "-O0"
				},
				"c64.s":{
					"target" : "{title}.s"
				}
			]
		},
		"c64vice":{
			"description" : "Commodore 64 with VICE configuration",
			"super" : "c64",
			"include" : "c2/c64/c64.h",
			"arguments" : "--out-prg - + {title}.prg --vice-cmd {title}.sym",
			"execute" : "x64 -silent -moncommands {title}.sym {title}.prg",
			"source":[
				"c2i.cpp":{
					"flags" : "-O2"
				},
				"c64.cpp":{
					"flags" : "-O2"
				}
			],
			"template":[
				"asm.cpp":{
					"target" : "{title}.cpp"
					"c2" : true
					"flags" : "-O0"
				},
				"c64.s":{
					"target" : "{title}.s"
				}
			]
		},
		"void":{
			"description" : "Void c2 project, no target architecture for custom assembly of binaries",
			"super" : "c2i",
			"include" : "c2/h/c2i.h",
			"arguments" : "--address-range 0x0 0x100000 --out - + {title}.bin",
			"source":[
				"c2i.cpp":{
					"flags" : "-O2"
				}
			],
			"template":[
				"asm.cpp":{
					"target" : "{title}.cpp"
					"c2" : true
					"flags" : "-O0"
				},
				"void.s":{
					"target" : "{title}.s"
				}
			]
		}
	]
}
